//////////////////////////////////
//////////////////////////////////
/////// VARIABLES & MIXINS ///////
//////////////////////////////////
//////////////////////////////////

/////// COLORS ///////
$border: #e7e7e7;
$gray: #e7e7e7;
$darkgray: #cfcfcf;
$hover: #91b2a1;

/////// WIDTHS ///////
@mixin wide-cont {width: 95%; margin: 0 auto; max-width: 1600px;
  @media #{$tablet} {  width: 90%;}
}
@mixin skinny-cont {  width: 75%; margin: 0 auto;
  @media #{$tablet} {  width: 90%;}
}

/////// MEDIA QUERIES ///////
$tablet: "only screen and (max-width: 770px)";
$phone: "only screen and (max-width: 500px)";

/////// FONTS ///////
@mixin brandon-medium { font-family: "brandon-grotesque",sans-serif; font-style: normal; font-weight: 500; }
@mixin brandon-bold { font-family: "brandon-grotesque",sans-serif; font-style: normal; font-weight: 700; text-transform: uppercase; letter-spacing: 3px; font-size: 14px;}
@mixin brandon-black { font-family: "brandon-grotesque",sans-serif; font-style: normal; font-weight: 900; text-transform: uppercase; letter-spacing: 2px; font-size: 10px;}

@mixin kepler-bold  { font-family: "kepler-std-display",serif;font-style: normal;font-weight: 700; letter-spacing: 0; font-size: 40px;}
@mixin kepler-regular { font-family: "kepler-std-display",serif; font-style: normal; font-weight: 400;}
@mixin kepler-italic {  font-family: "kepler-std-semicondensed-dis",serif;font-style: italic;font-weight: 700; letter-spacing: 0;}

@mixin cursive {  font-family: "bickham-script-pro",sans-serif;font-style: normal;font-weight: 400; text-transform: none; letter-spacing: 0;}


/////// MIXINS ///////
@mixin transition($args...) {-webkit-transition: $args;-moz-transition: $args;-ms-transition: $args;-o-transition: $args;transition: $args;}

@mixin transform($args...) {-webkit-transform: $args;-moz-transform: $args;-ms-transform: $args;-o-transform: $args;transform: $args;}

@mixin browser-appearance($args...) {-webkit-appearance: $args;-moz-appearance: $args;-ms-appearance: $args;-o-appearance: $args;appearance: $args;}

@mixin tablet {
  @media only screen and (max-width: 900px) {@content;}
}
@mixin phone {
  @media only screen and (max-width: 500px) {@content;}
}

@mixin gray-box { background-color: $gray;  outline: 2px solid white; outline-offset: -20px; padding: 50px 60px; text-align: center; }
.gray-box { @include gray-box;
  &.blog p { @include kepler-italic; font-size: 18px;}
}

@mixin link-fix { border-bottom: 0; padding-bottom: 0;}

@mixin black-arrow {  content:'';background-image: url(../assets/arrow_black.png); display: inline-block; width: 13px; height: 8px; background-repeat: no-repeat;background-size: contain; margin-left: 8px;}
@mixin white-arrow {  content:'';background-image: url(../assets/arrow_white.png); display: inline-block; width: 13px; height: 8px; background-repeat: no-repeat;background-size: contain; margin-left: 8px;}

/////// LINKS AND INPUTS ///////
a{ text-decoration: none;  cursor: pointer; color: inherit; @include transition(all 0.2s ease); padding-bottom: 1px; border-bottom: 1px solid black; line-height: 24px;
  &:hover { color: $hover; border-color: $hover;}
}
.press-item a, button, .button, .btn, #signup-button, input[type="submit"], input[type="button"] { border: 2px solid black; @include brandon-black; font-size: 10px; padding: 14px 25px; display: inline-block; @include browser-appearance(none); background-color: white;@include transition(all 0.2s ease); cursor: pointer; line-height: normal; border-radius: 0;
  &:after { @include black-arrow;}
  &:hover { background-color: $hover; border-color: $hover; color: white;
    &:after { @include white-arrow;}
  }
  &.black { background-color: black; color: white;
    &:after { @include white-arrow;}
    &:hover { background-color: $hover; border-color: $hover;}
  }
  @media #{$tablet} { font-size: 10px;}
}
input[type="text"],input[type="email"], input[type="tel"],input[type="number"], input[type="search"], input[type="password"], select,textarea {  @include browser-appearance(none); border-radius: 0; border: 2px solid black; padding: 10px; background-color: white; resize: none;}
select {  background-image: url(../assets/caret-down.png); background-repeat: no-repeat; background-position: 95% 50%; background-size: 10px; min-width: 100px; padding: 10px 20px 10px 10px;}
label { display: block; @include brandon-black; }
table { border-collapse: collapse;}
*:focus { border: 0;  outline:none;}
select:focus, textarea:focus {  border: 2px solid black;}
button:focus, a.button:focus {  border: 2px solid $hover;}
input::-webkit-outer-spin-button,input::-webkit-inner-spin-button {-webkit-appearance: none;margin: 0; }


body, html {  width: 100%; margin: 0; padding: 0; background: white; position: relative;}
body { overflow-x: hidden;  position: relative; @include kepler-regular; color: #3b3837;min-height: 100%;}
body * {  box-sizing: border-box;}
img { max-width: 100%; height: auto; display: block;}
ul {  margin: 0; padding: 0}
.hidden { display: none;}
.skinny-cont {  @include skinny-cont;}
.wide-cont {  @include wide-cont;}
.center { text-align: center;}

