///////////// GLOBAL /////////////
//////////////////////////////////
//////////////////////////////////
.table {  display: table; width: 100%;table-layout: fixed;
  @media #{$tablet} { width: 100%; display: block;}
}
.table-cell {display: table-cell; vertical-align: middle;
  &.standard {position: relative;  background-size: cover; background-position: 50% 50%;padding: 135px 0px; text-align: center;width: 33%;
    .cont { text-align: center; background: white; outline: 2px solid $border; outline-offset: -10px; padding: 45px 35px;  display: inline-block; margin: 0 auto;}
    @media #{$tablet} { width: 100%; display: block; margin-bottom: 20px;}
  }
  &.space { width: 20px; background: white;}
  @media #{$tablet} { width: 100%; display: block; margin-bottom: 20px; }
}

li {  display: inline-block; list-style: none;}

#PageContainer {  @include wide-cont; border: 0;@include kepler-regular;@include transition(0.2s right ease); background: white;
  @media #{$tablet} { min-width: 100%; min-height: 100%;background-color: #fff;position: relative;top: 0;bottom: 100%;right: 0;z-index: 1;
    &.open {  right: 200px;}
  }
}
 @media #{$tablet} {
  #about-us .wrapper.main-content {  width: 100%;}
  .wrapper.main-content { width: 90%; margin: 0 auto;}
 }

.hidden, .visually-hidden { display: none;}

h3 {  @include brandon-bold; font-size: 14px; margin: 0; color: black;
  @media #{$tablet} { font-size: 12px;}
}
h2, h1 {  @include kepler-bold; font-size: 40px; margin: 0; color: black; letter-spacing: 1px;
  @media #{$phone} {  font-size: 34px;}
}
p  {font-size: 18px; letter-spacing: 1px; line-height :24px;}

.overlay {  top: 0; left: 0; width: 100%; height: 100%;opacity: 0; @include transition(all 0.2s ease); padding: 20px; background: black; color: white; position: absolute;
  .cont {position: absolute;top: 50%; left: 50%; @include transform(translate(-50%, -50%)); width: 85%;
    @media #{$tablet} { top: auto; left: auto; @include transform(none); width: 100%;position: relative; }
  }
  h2, h3 {  color: white;
    @media #{$tablet} { color: black;}
  }
  h3 {  font-size: 12px;}
  div.cont p { font-size: 16px; margin-bottom: 0;}
  @media #{$tablet} { opacity: 1; width: auto; height: auto; padding: 10px 0;position: relative; background: white; color: black;}
}

.grid_item {  display: inline-block; vertical-align: top; position: relative; margin: 20px 1.25%;
  &.two-across {  width: 47%; text-align: left;
    @media #{$phone} { width: 100%; margin: 20px auto;}
  }
  &.three-across { width: 30%; text-align: center; vertical-align: top;
    @media #{$tablet} { width: 46%;}
  }
  &.four-across { width: 21%; text-align: center; vertical-align: bottom;
    @media #{$tablet} { width: 30%; vertical-align: top;}
    @media #{$phone} { width: 46%;}
  }
  &:hover .overlay {  opacity: 1;}
}

.image-header { margin-bottom: 20px; display: table; width: 100%;
  .cont {  padding: 60px 40px; position: relative;
    span {  @include kepler-italic; font-size: 24px; text-transform: lowercase; display: block;}
    @media #{$tablet} { width: 90%; display: block; margin: -90px auto 0; background: white;outline: 2px solid $border; outline-offset: -10px; padding: 40px 30px; text-align: center;}
  }
  .table-cell.pic { background-position: 50% 13%; background-size: cover;}
  &.desktop {
    @media #{$tablet} { display: none;}
  }
  &.mobile { display: none;
    @media #{$tablet} { display: block;}
  }
}

.pagination { text-align: center; padding: 30px 0;
  span {  padding: 0 5px;}
}

// NEW
.sidebar {  width: 250px; vertical-align: top;
  li {  display: block;}
  a { border-bottom: 0; }
  ul {
     @media #{$tablet} { display: none;}
  }
