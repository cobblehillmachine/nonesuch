//////////////////////////////////
//////////////////////////////////
///////////// HEADER /////////////
//////////////////////////////////
//////////////////////////////////
.utility-nav, .main-nav, .footer-nav, .utility-footer { display: table; width: 100%;
  ul {  display: table-cell; text-align: left; vertical-align: middle;
    &:last-child {  text-align: right;
      @media #{$phone} {  text-align: center;}
    }
    @media #{$phone} {  display: block; text-align: center; margin: 20px auto;}
  }
  li {  vertical-align: middle;}
}

.utility-nav { padding: 10px 0;
  li  {  @include kepler-bold; font-size: 14px; padding-right: 15px;}
  img { max-width: 15px; display: inline-block; vertical-align: middle; margin-right: 5px; @include transition(0.2s all ease);}
  .masked.icon img {  background-color: black;}
  .masked.icon:hover img {  background-color: $hover;}
  span {  display: none; vertical-align: middle;   overflow: hidden; line-height: normal;}
  i { font-size: 18px; vertical-align: middle; margin-right: 5px;}
  a:hover i { color: $hover;}
  @media #{$tablet} { display: none;}
}

.main-nav, .utility-nav, .footer-nav, .utility-footer, .top-cats, .filter-by, .pagination {
  a { @include link-fix;}
}
.main-nav { padding: 0px 0 20px; margin-top: -45px;
  ul {  width: 33%; vertical-align: bottom;}
  li {  width: 49%; text-align: center; @include brandon-bold; font-size: 16px; position: relative; cursor: pointer; padding: 10px 0; }
  ul:first-child, ul:last-child {
    li {  margin-bottom: 20px;}
  }
  ul:nth-child(2n) { width: auto;
    li {  width: 100%;}
    img { width: 250px; margin: 0 auto;}
  }
  ul.dropdown { display: none; position: absolute; width: 100%; top: 100%;left: 0; background-color: white; border: 2px solid black; padding: 10px; z-index: 12; text-align: center;
    a {  width: 100%; @include kepler-italic; font-size: 20px; text-transform: none; padding: 10px 0; letter-spacing: 0; display: block;}

    &:before{border: solid;border-color: black transparent;border-width: 9px 9px 0 9px;top: 0px;content: "";left: 50%;@include transform(translate(-50%, 0));position: absolute;z-index: 99;}
  }
  li:hover ul.dropdown {  display: block;}
  @media #{$tablet} { display: none;}
}

//////////////////////////////////
//////////////////////////////////
///////// MOBILE HEADER //////////
//////////////////////////////////
//////////////////////////////////
.mobile-header { display: none; padding: 20px 5%; width: 100%;

  .table-cell:first-child { display: table-cell;
    img { max-width: 140px;}
  }
  .table-cell:last-child { text-align: right; cursor: pointer; display: table-cell;
    img { max-width: 18px;}
    span, img { display: inline; vertical-align: middle;}
  }
  span {  @include brandon-bold; font-size: 10px; margin-right: 5px;}
  @media #{$tablet} { display: table;}
}
