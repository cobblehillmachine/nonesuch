//////////////////////////////////
/////////// MOBILE NAV ///////////
//////////////////////////////////
//////////////////////////////////
.mobile-nav { background-color: black; color: white; width: 200px;height: 100%;position: absolute;top: 0;right: -200px;bottom: 0;z-index: 0; text-align: center; padding: 30px; @include transition(0.2s right ease);
  a { @include link-fix;}
  &.open { right: 0;}
  .utility { margin-bottom: 10px;
    li {  margin: 0 5px; vertical-align: top;}
    img { max-width: 20px;}
    form {  display: none;}
  }
  .main, .bottom {
    li { display: block; @include brandon-bold; }
  }
  .main {
    li {   font-size: 16px;padding: 8px 0; }
  }
  .bottom {
    li {  font-size: 10px;padding: 5px 0;}
  }
  hr {  width:40px; border: 0; background: white; height: 2px; margin: 10px auto;}
}



